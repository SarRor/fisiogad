<div class="container"  style="width:80%; margin auto;">
  <h2 class="text-center blue-tx">Galer√≠a</h2>
  <% @archivos.each do |archivo| %>
    <div class="row">
        <div class="col-sm-10">
          <h3><%= archivo.titulo %></h3>
          <div class="scroller">
            <% for i in (0...archivo.imagenes.size) %>
              <%= image_tag(archivo.imagenes[i].thumb.url, class:"img-responsive") %>
            <% end %>
          </div>
          <p><%= archivo.descripcion %></p><br>
        </div>
    </div>
  <% end %>
</div>
