<div class="devise-center container">
  <h2 class="text-center">Regístrate</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <label for="nombre"><b>Nombre</b></label>
    <%= f.text_field :nombre, autofocus: true, autocomplete: "nombre", placeholder:"Ingresa tu nombre", class:"reg-field", required: true %>
    <label for="email"><b>Email</b></label>
    <%= f.email_field :email, autocomplete: "email", placeholder:"Ingresa tu e-mail", class:"reg-field", required: true %>

    <label for="psw"><b>Contraseña</b></label>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caractéres mínimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder:"Ingresa tu contraseña", class:"reg-field", required: true %>

    <label for="psw-repeat"><b>Repite tu contraseña</b></label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Repite tu contraseña", class:"reg-field", required: true %>
    <%= f.submit "Registrarse", class:"submit-btn" %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
