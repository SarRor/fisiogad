<div class="devise-center container">
  <h2 class="text-center">Editar <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <label for="nombre"><b>Nombre</b></label>
    <%= f.text_field :nombre, autofocus: true, autocomplete: "nombre", placeholder:"Ingresa tu nombre", class:"reg-field" %>

    <label for="email"><b>Email</b></label>
    <%= f.email_field :email, autocomplete: "email", placeholder:"Ingresa tu e-mail", class:"reg-field" %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <label for="psw-new"><b>Contraseña nueva</b></label> <i>(dejar en blanco si no desea cambiarla)</i>
    <%= f.password_field :password, autocomplete: "new-password", placeholder:"6 caracteres mínimo", class:"reg-field" %>

    <label for="psw-repeat"><b>Repite tu contraseña</b></label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Repite tu contraseña", class:"reg-field" %>


    <label for="psw-actual"><b>Contraseña actual</b></label> <i>(se requiere para realizar los cambios)</i>
    <%= f.password_field :current_password, autocomplete: "current-password", placeholder:"Contraseña actual", class:"reg-field", required: true %>


    <div class="actions">
      <%= f.submit "Actualizar", class:"submit-btn" %>
    </div>
  <% end %>


  <p><%= button_to "Cancelar cuenta", registration_path(resource_name), data: { confirm: "¿Estás seguro?" }, method: :delete, class:"cancel-btn" %></p>
</div>
